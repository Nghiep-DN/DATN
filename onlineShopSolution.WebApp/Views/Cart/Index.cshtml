@{ var culture = CultureInfo.CurrentCulture.Name; }
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/js/cart.js"></script>
    <script>
        var cartController = new CartController();
        cartController.init();
    </script>
}
<ul class="breadcrumb">
    <li><a>Home</a> <span class="divider">/</span></li>
    <li class="active"> SHOPPING CART</li>
</ul>
<h3>  SHOPPING CART [ <small><span id="numberItem">0</span> Item(s) </small>]<a href="/" class="btn btn-large pull-right"><i class="icon-arrow-left"></i> Continue Shopping </a></h3>
<hr class="soft" />


<table class="table table-bordered" id="tblCart">
    <thead>
        <tr>
            <th>Product</th>
            <th>Name</th>
            <th>Quantity/Update</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody id="cart-body">
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" style="text-align:right"><strong>TOTAL =</strong></td>
            <td class="label label-important" style="display:block"> <strong><span id="tbl-total"></span> </strong></td>
        </tr>
    </tfoot>
</table>


<a href="/" class="btn btn-large"><i class="icon-arrow-left"></i> Continue Shopping </a>
<a href="/@culture/Checkout/Checkout" class="btn btn-large pull-right">Next <i class="icon-arrow-right"></i></a>

