@model onlineShopSolution.ViewModel.Catalog.Products.CategoryAssignRequest

@{
    ViewData["Title"] = "CategoryAssign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- .content-wrapper -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Category Assign</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">CategoryAssign</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <!-- /.card -->

                    <div class="card">
                        <div class="card-header">
                            @*<h3 class="card-title">DataTable with default features</h3>
                                <br />*@
                            <br />
                            <p>
                                <a class="btn btn-success" asp-action="Index">Back to List</a>
                            </p>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <form asp-action="CategoryAssign">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                @for (var i = 0; i < Model.Categories.Count; i++)
                                {
                                    <div class="form-group">
                                        <label>
                                            @Model.Categories[i].Name
                                            <input type="checkbox" asp-for="Categories[i].Selected" />
                                            <input type="hidden" asp-for="Categories[i].Id" />
                                            <input type="hidden" asp-for="Categories[i].Name" />
                                        </label>
                                    </div>
                                }
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->

</div>
<!-- /.content-wrapper -->
