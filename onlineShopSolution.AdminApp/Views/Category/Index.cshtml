<!-- Modal -->
<div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Danh mục</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form role="form" class="form-group" id="frmValid">
                <div class="modal-body">
                    <input type="hidden" value="0" id="hidID">
                    <div class="row">
                        <div class="col-md-3">Tên danh mục:</div>
                        <div class="col-md-9"><input id="txtName" name="txtName" type="text" class="form-control input-modal" value="" /></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">Seo Alias:</div>
                        <div class="col-md-9"><input id="txtSeoAlias" type="text" class="form-control input-modal" value="" /></div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">Seo Description:</div>
                        <div class="col-md-9"><input id="txtSeoDescription" name="txtSeoDescription" type="text" class="form-control input-modal" value="" /></div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">Seo Title:</div>
                        <div class="col-md-9"><input id="txtSeoTitle" type="text" class="form-control input-modal" value="" /></div>
                    </div>
                </div>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Thoát</button>
                <button type="button" id="btnSave" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>


